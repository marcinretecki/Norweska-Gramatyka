      <tr><th>jeg</th>    <td>min</td>     <td>mi</td>     <td>mitt</td>   <td>mine</td></tr>
      <tr><th>du</th>     <td>din</td>     <td>di</td>     <td>ditt</td>   <td>dine</td></tr>
      <tr><th>han</th>    <td>sin</td>     <td>si</td>     <td>sitt</td>   <td>sine</td></tr>
      <tr><th>hun</th>    <td>sin</td>     <td>si</td>     <td>sitt</td>   <td>sine</td></tr>
      <tr><th>vi</th>     <td>vår</td>     <td>vår</td>    <td>vårt</td>   <td>våre</td></tr>
      <tr><th>dere</th>   <td>deres</td>   <td>deres</td>  <td>deres</td>  <td>deres</td></tr>
      <tr><th>de</th>     <td>sin</td>     <td>si</td>     <td>sitt</td>   <td>sine</td></tr>
    </tbody>
